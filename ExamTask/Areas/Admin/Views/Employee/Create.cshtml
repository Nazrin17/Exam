@{
    ViewData["Title"] = "Create";
}
@model EmployeePostDto
<div class="row">
    <div class="grid-margin stretch-card">
        <div class="card">
            <div class="card-body">      
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label >Name</label>
                        <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label>Position</label>
                        <input type="text" class="form-control" asp-for="Position" placeholder="Position">
                        <span asp-validation-for="Position"></span>
                    </div>
                    <div class="form-group">
                        <label>About</label>
                        <input type="text" class="form-control" asp-for="About" placeholder="About">
                        <span asp-validation-for="About"></span>
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <input class="form-control" asp-for="formFile" placeholder="About">
                        <span asp-validation-for="formFile"></span>
                    </div>
                    <div class="form-group">
                        <label>Icon</label>
                        <input class="form-control" asp-for="TwitterUrl" placeholder="TwitterUrl">
                        <span asp-validation-for="TwitterUrl"></span>
                    </div>  
                    <div class="form-group">
                        <label>InstagramUrl</label>
                        <input class="form-control" asp-for="InstagramUrl" placeholder="InstagramUrl">
                        <span asp-validation-for="InstagramUrl"></span>
                    </div>  
                    <div class="form-group">
                        <label>FacebookUrl</label>
                        <input class="form-control" asp-for="FacebookUrl" placeholder="FacebookUrl">
                        <span asp-validation-for="FacebookUrl"></span>
                    </div> 
                    <div class="form-group">
                        <label>LinkedinUrl</label>
                        <input class="form-control" asp-for="LinkedinUrl" placeholder="LinkedinUrl">
                        <span asp-validation-for="LinkedinUrl"></span>
                    </div>
           
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

